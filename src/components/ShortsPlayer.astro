---
const { src } = Astro.props;
---

<div class="ShortsPlayer">
	<center>
		<iframe
			height="710"
			width="400"
			class="iframeWrapper"
			src={src}
			title="AlphaTree Service Player"
			frameborder="0"
			allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
			allowfullscreen
		>
		</iframe>
	</center>
</div>
